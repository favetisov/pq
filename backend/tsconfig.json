{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@api/*": ["./api/*"],
      "@stats/*": ["./stats/*"],
      "@igr/*": ["./igraphics/*"],
      "@graphql/*": ["./graphql/*"]
    }
  },
  "exclude": [
    "igraphics"
  ]
}
